<h1>summary of <%= @person.name %></h1>
<table>
  <tr>
    <td>group</td>
    <td>pay</td>
    <td>consume</td>
    <td>balance</td>
  </tr>
  <% @summary.each do |record| %>
  <tr>
    <td><%= record["name"] %></td>
    <td><%= record["pay"] %></td>
    <td><%= record["consume"] %></td>
    <td><%= record["pay"] - record["consume"] %></td>
  </tr>
  <% end %>
</table>
